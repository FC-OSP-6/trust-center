{
  "name": "trust-center-osp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:all": "concurrently -n server,client,stencil -c auto --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\" \"npm run stencil\"",

    "dev:client": "vite",
    "dev:server": "tsx watch server/server.ts",
    "stencil": "cd stencil && stencil build --dev --watch",

    "db:seed": "tsx server/seed.ts",
    "db:migrate": "echo \"TODO: add db migrations (placeholder Day 1)\"",

    "build": "vite build",
    "preview": "vite preview",
    "test": "echo \"No tests yet\"",
    "typecheck": "tsc -p ./config/tsconfig.json --noEmit",
    "cleanexit": "concurrently -n server,client,stencil,fail -c auto --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\" \"npm run stencil\" \"node -e \\\"process.exit(1)\\\"\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.7.0",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@stencil/core": "^4.21.0",
    "@stencil/react-output-target": "^0.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
