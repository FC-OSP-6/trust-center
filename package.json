{
  "name": "trust-center-osp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "stencil"
  ],
  "scripts": {
    "dev": "concurrently -n server,client,stencil -c auto --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\" \"npm run stencil\"",
    "dev:basic": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/server.ts",
    "stencil": "cd stencil && stencil build --watch",
    "dev:client": "vite --config vite.config.ts",
    "build": "npm run build:stencil && npm run build:client",
    "build:stencil": "npm --prefix stencil run build",
    "build:client": "vite build --config vite.config.ts",
    "preview": "vite preview --config vite.config.ts",
    "db:seed": "tsx server/db/seed.ts",
    "db:migrate": "npm exec tsx -- -e \"import { runDbMigrate } from './server/db/index.ts'; runDbMigrate();\"",
    "db:cleanapply": "npm exec tsx -- -e \"import { runCleanApplyDb } from './server/db/index.ts'; runCleanApplyDb();\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:watch": "vitest",
    "test:unit": "vitest run testing/unit",
    "test:integration": "vitest run testing/integration",
    "test:stencil": "npm --prefix stencil run test:spec",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:smoke": "playwright test testing/e2e/app.spec.ts",
    "test:e2e:subnav": "playwright test testing/e2e/controls.spec.ts",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "cleanexit": "concurrently -n server,client,stencil,fail -c auto --kill-others-on-fail \"npm run dev:server\" \"npm run dev:client\" \"npm run stencil\" \"node -e \\\"console.error('[fail] waiting 12s then exiting 1'); setTimeout(() => process.exit(1), 12000)\\\"\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.7.0",
    "lru-cache": "^11.2.6",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@stencil/core": "^4.21.0",
    "@stencil/react-output-target": "^0.5.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^4.0.18"
  }
}
